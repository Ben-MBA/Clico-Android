<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/layoutTopBackground"
    android:layout_height="400dp"
    android:paddingTop="20dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <AutoCompleteTextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_activity_search"
        android:hint="Acitivity..."
        android:textColor="@android:color/white"
        android:drawableLeft="@android:drawable/ic_menu_search"
        android:layout_gravity="center_horizontal"
        android:singleLine="true"
        android:theme="@style/EditTextWhiteTheme"/>
    <AutoCompleteTextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_activity_location"
        android:hint="Place..."
        android:textColor="@android:color/white"
        android:drawableLeft="@android:drawable/ic_menu_mapmode"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:theme="@style/EditTextWhiteTheme"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="From"
                android:id="@+id/textView_lbl_dateIn"
                android:gravity="center_vertical" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:hint="--/--/--"
                android:id="@+id/textView_value_dateFrom"
                android:gravity="center"
                android:layout_marginLeft="9dp"
                android:singleLine="true"
                style="@android:style/Widget.EditText"
                android:textColor="@android:color/white"
                android:focusable="false"
                android:theme="@style/EditTextWhiteTheme"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="To"
                android:id="@+id/textView_lbl_dateOut"
                android:gravity="center_vertical" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:hint="--/--/--"
                android:id="@+id/textView_value_dateTo"
                android:layout_marginLeft="9dp"
                android:singleLine="true"
                style="@android:style/Widget.EditText"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:focusable="false"
                android:theme="@style/EditTextWhiteTheme"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Deals"
            android:id="@+id/textView_deals"
            android:layout_gravity="center_vertical" />

        <Spinner
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>


    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Find"
        android:id="@+id/button_search"
        android:textColor="@android:color/white"
        android:background="@color/colorAccent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp" />
</LinearLayout>