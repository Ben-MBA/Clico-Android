<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.haramy.clico.DealDetailActivity"
    tools:showIn="@layout/activity_deal_detail">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/layout_detail_container_padding">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_detail_height"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="@dimen/layout_detail_lbl_width"
                android:layout_height="wrap_content"
                android:id="@+id/textView_lbl_reputation"
                android:text="Reputation"
                android:layout_alignParentLeft="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_reputation"
                android:textColor="@android:color/holo_green_dark"
                android:text="+ 4 781"
                android:layout_toRightOf="@+id/textView_lbl_reputation" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:rating="5"
                android:numStars="5"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_detail_height"
            android:gravity="center_vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_detail_height"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="@dimen/layout_detail_lbl_width"
                android:layout_height="wrap_content"
                android:id="@+id/textView_lbl_name"
                android:text="Name" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_name"
                android:textColor="@color/colorTextPrimary"
                android:text="Maison Rostang" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_detail_height"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="@dimen/layout_detail_lbl_width"
                android:layout_height="wrap_content"
                android:id="@+id/textView_lbl_location"
                android:text="Location" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_location"
                android:textColor="@color/colorTextPrimary"
                android:text="20 Rue Rennequin 75017 Paris France" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_detail_height"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="@dimen/layout_detail_lbl_width"
                android:layout_height="wrap_content"
                android:id="@+id/textView_lbl_email"
                android:text="Email" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_email"
                android:textColor="@color/colorTextPrimary"
                android:text="info@rostang.com"
                android:autoLink="email"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_detail_height"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="@dimen/layout_detail_lbl_width"
                android:layout_height="wrap_content"
                android:id="@+id/textView_lbl_phone"
                android:text="Phone" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_phone"
                android:textColor="@color/colorTextPrimary"
                android:text="+33 (0)6 12 13 14 15"
                android:autoLink="phone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_detail_height"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="@dimen/layout_detail_lbl_width"
                android:layout_height="wrap_content"
                android:id="@+id/textView_lbl_sharedDeals"
                android:text="Visitor average" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_duration"
                android:textColor="@color/colorTextPrimary"
                android:text="93/day" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_detail_height"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="@dimen/layout_detail_lbl_width"
                android:layout_height="wrap_content"
                android:id="@+id/textView_lbl_duration"
                android:text="Deal duration" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_lastSearch"
                android:textColor="@color/colorTextPrimary"
                android:text="03 Jul. 2016 to 03 Aug. 2016" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="@dimen/layout_detail_lbl_width"
                android:layout_height="wrap_content"
                android:id="@+id/textView_lbl_desc"
                android:text="Description" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_desc"
                android:textColor="@color/colorTextPrimary"
                android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit. Eligendi non quis exercitationem culpa nesciunt nihil aut nostrum explicabo reprehenderit optio amet ab temporibus asperiores quasi cupiditate" />
        </LinearLayout>

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>